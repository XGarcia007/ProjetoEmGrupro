@model Testeprojeto.Models.Portfolio

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Portfolio</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PorfolioId" />
            <div class="form-group">
                <label asp-for="Servicos" class="control-label"></label>
                <input asp-for="Servicos" class="form-control" />
                <span asp-validation-for="Servicos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Missao" class="control-label"></label>
                <input asp-for="Missao" class="form-control" />
                <span asp-validation-for="Missao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valores" class="control-label"></label>
                <input asp-for="Valores" class="form-control" />
                <span asp-validation-for="Valores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Visao" class="control-label"></label>
                <input asp-for="Visao" class="form-control" />
                <span asp-validation-for="Visao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para o início</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
